---
// layouts/Layout.astro
import background from '../assets/background.svg';
import "../styles/global.css"

const nameCompany = 'IngenieriaProg';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{nameCompany}</title>
		
		<!-- Enable View Transitions -->
		<astro:head>
			<meta name="view-transition" content="same-origin" />
		</astro:head>
	</head>
	<body class="m-0 p-0 w-full min-h-screen font-sans">
		<!-- Fondo con blur -->
		<div 
			class="fixed top-0 left-0 w-[250px] h-full -z-10 filter blur-lg opacity-60 bg-cover"
			style="background: url('{background}');"
		></div>

		<header class="sticky top-0 z-50 bg-white/80 backdrop-blur-xl shadow-lg border-b border-gray-200">
			<div class="flex justify-between items-center px-6 py-4 max-w-7xl mx-auto">
				<div class="flex items-start gap-3">
					<img 
						src="/IngenieriaProg.png" 
						alt="Logo de IngenieriaProg" 
						class="w-[200px] h-auto object-contain"
					>
				</div>
				<nav class="flex items-center gap-8">
					<!-- RUTAS SIMPLES SIN BASE -->
					<a href="/" class="text-lg font-medium text-gray-700 hover:text-blue-600 transition duration-300 no-underline">
						Home
					</a>
					<a href="/about" class="text-lg font-medium text-gray-700 hover:text-blue-600 transition duration-300 no-underline">
						About Us
					</a>
					<a href="/structure" class="text-lg font-medium text-gray-700 hover:text-blue-600 transition duration-300 no-underline">
						Hierarchical Structure 
					</a>
					<a href="/financial" class="text-lg font-medium text-gray-700 hover:text-blue-600 transition duration-300 no-underline">
						Financial Component 
					</a>
				</nav>
			</div>
		</header>

		<main class="flex-1 min-h-[calc(100vh-140px)]">
			<slot />
		</main>

		<footer class="bg-white/80 backdrop-blur-xl border-t border-gray-200 py-6">
			<div class="max-w-7xl mx-auto px-6 text-center text-gray-600">
				<p>&copy; 2024 {nameCompany}. Todos los derechos reservados.</p>
			</div>
		</footer>
	</body>
</html>